<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
             
    <persistence-unit name="default">
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	<non-jta-data-source>java://comp/env/jdbc/checkengineDS</non-jta-data-source>
    	<class>org.openxava.session.GalleryImage</class>
    	<class>org.openxava.web.editors.DiscussionComment</class>
    	<class>com.openxava.naviox.model.ConfigurationRecord</class>
    	<class>com.openxava.naviox.model.Folder</class>
    	<class>com.openxava.naviox.model.History</class>
    	<class>com.openxava.naviox.model.Module</class>
    	<class>com.openxava.naviox.model.ModuleRights</class>
    	<class>com.openxava.naviox.model.Organization</class>
    	<class>com.openxava.naviox.model.Role</class>
    	<class>com.openxava.naviox.model.SessionRecord</class>
    	<class>com.openxava.naviox.model.User</class>
    	<!-- Entidades del modelo Check Engine -->
    	<class>com.checkengine.checkengine.modelo.Cliente</class>
    	<class>com.checkengine.checkengine.modelo.Vehiculo</class>
    	<class>com.checkengine.checkengine.modelo.Cita</class>
    	<class>com.checkengine.checkengine.modelo.OrdenServicio</class>
    	<class>com.checkengine.checkengine.modelo.TipoServicio</class>
    	<class>com.checkengine.checkengine.modelo.DetalleTrabajoOrden</class>
    	<class>com.checkengine.checkengine.modelo.Repuesto</class>
    	<class>com.checkengine.checkengine.modelo.DetalleRepuestoOrden</class>
    	<class>com.checkengine.checkengine.modelo.FacturaInterna</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="update"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>

            <!-- Configuración de caché para evitar duplicados -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>

            <!-- Configuración para evitar resultados duplicados en consultas -->
            <property name="hibernate.query.fail_on_pagination_over_collection_fetch" value="true"/>

            <!-- Usar DISTINCT para pasar por el resultado de la transformación del Set -->
            <property name="hibernate.query.passDistinctThrough" value="false"/>
        </properties>
    </persistence-unit>
                    
    <!-- JUnit Hypersonic -->
    <persistence-unit name="junit">
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	<class>org.openxava.web.editors.DiscussionComment</class>
    	<class>com.openxava.naviox.model.ConfigurationRecord</class>
    	<class>com.openxava.naviox.model.Folder</class>
    	<class>com.openxava.naviox.model.History</class>
    	<class>com.openxava.naviox.model.Module</class>
    	<class>com.openxava.naviox.model.ModuleRights</class>
    	<class>com.openxava.naviox.model.Organization</class>
    	<class>com.openxava.naviox.model.Role</class>
    	<class>com.openxava.naviox.model.SessionRecord</class>
    	<class>com.openxava.naviox.model.User</class>
        <properties>
			<property name="hibernate.connection.url" value="jdbc:hsqldb:hsql://localhost:1666"/>
        </properties>
    </persistence-unit>    
    
</persistence>
